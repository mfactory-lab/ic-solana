# http://editorconfig.org
root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.{rs,toml}]
indent_size = 4

[*.md]
trim_trailing_whitespace = false
max_line_length = 140

[Makefile]
indent_size = 4
indent_style = tab
